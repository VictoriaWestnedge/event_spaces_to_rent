<div class="container">
<h2>Available Venues </h2>
<div class="card">
<p>Event Space Name: <%= @event_space.name %></p>
<p>Address: <%= @event_space.adress %></p>
<p>City: <%= @event_space.city %></p>
<p>Description: <%= @event_space.description %></p>
<p>Price Per Hour: <%= @event_space.price_per_hour %> USD</p>
<p>Minimum Hours: <%= @event_space.min_hour %></p>
<br>
<%= link_to "Book here", new_event_space_booking_path(@event_space), class: "btn-success" %>
<br>

<%= link_to "Back", root_path, class: "btn-back" %>
</div>
<br>
<div
  style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value = "<%= @marker.to_json %>"
  data-map-api-key-value = "<%= ENV['MAPBOX_API_KEY'] %>"

></div>

    <br>
      <h2>My Venues for Hire</h2>
      <div>
      <%= link_to("Add new venue", new_event_space_path, class: "btn-success") %>
      </div>
      <% @my_spaces.each do |space| %>
      <div class="card">
      <%= cl_image_tag space.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-infos">
      <div>
        <p>Name: <%= space.name %></p>
        <p>Address: <%= space.adress  %></p>
        <p>Price per hour: <%= space.price_per_hour %> USD</p>
         </div>
        <%= link_to("Edit your venue", edit_event_space_path(space), class: "btn-success") %>
      <% end %>
      </div>
      </div>
</div>
