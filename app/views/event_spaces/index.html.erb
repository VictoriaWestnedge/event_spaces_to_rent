<div class="container">
<div class="row mt-3">
    <h1>Search results</h1>
    <% if @event_spaces.any? %>
      <ul>
        <% @event_spaces.each do |e| %>
          <div class="card">
           <%= cl_image_tag e.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-infos">
            <h5><strong><%= e.name.titleize %></strong></h5>
            <p><%= e.adress.titleize %></p>
            <p><%= e.city.titleize %></p>
            <p><%= e.description.capitalize %></p>
            <p><%= e.price_per_hour %> USD per hour</p>
            <p><%= e.min_hour %> hours minimum stay</p>
            <%= link_to "Book here", new_event_space_booking_path(e), class: "btn-success" %>
            </div>
             </div>
            <br>
        <% end %>
      </ul>
    <% else %>
      <p>There are not any Spaces in this city.</p>
    <% end %>


    <br>
    <div
      style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value = '<%= @markers.to_json %>'
      data-map-api-key-value = '<%= ENV['MAPBOX_API_KEY'] %>'

    ></div>
  </div>
</div>
