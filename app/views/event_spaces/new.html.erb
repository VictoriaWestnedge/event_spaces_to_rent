<div class="container">
  <div class="mt-3">
    <h2> New Event Space </h2>
    <%= simple_form_for @event_space  do |f| %>
      <%= f.input :name %>
      <%= f.input :adress %>
      <%= f.input :description %>
      <%= f.input :price_per_hour %>
      <%= f.input :min_hour %>
      <%= f.input :city %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
    <%# <%= link_to "Back", event_space_path %>
  </div>
</div>
