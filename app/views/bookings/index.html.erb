<div class="container">
<div class="row">
<div class="mt-3">

    <h2>Your Reservations</h2>
    <% @bookings.each do |booking| %>
    <div class="card_booking">
      <%= cl_image_tag booking.event_space.photo.key %>
        <div class="card_booking-infos">
          <ul>
            <li> From <%= booking.start_date %> To: <%= booking.end_date %></li>
            <li> Number of Hours: <%= booking.qty_hour %> </li>
            <li> Total Cost: <%= booking.total_cost %> USD</li>
          </ul>
        </div>
      <%= link_to("More information", booking_path(booking), class: "btn-success") %>
    <% end %>
    </div>


<br>
    <h2>Reservations for your listed Venues</h2>
    <% @my_rents.each do |space| %>
      <% space.bookings.each do |rent| %>
      <div class=“card_booking”>
        <br>
        <ul>
          <li>Start Date <%= rent.start_date %></li>
          <li>End Date <%= rent.end_date  %></li>
          <li>Number of Hours <%= rent.qty_hour %></li>
          <li>Total Cost <%= rent.total_cost %> USD</li>
          <li>User <%= rent.user.email %></li>
        </ul>
        <%= link_to("More information", booking_path(rent), class: "btn btn-primary") %>
        <br>
      <% end %>
    <% end %>
  </div>
</div>
  </div>
</div>
