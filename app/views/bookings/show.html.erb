<div class="container">
<div class="row">
<div class="mt-3">

<h2>Booking Information</h2>
<div class="card_booking-show mt-4">
    <% if @booking.event_space.photo.key != nil %>
          <%= cl_image_tag @booking.event_space.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
          <%=image_tag @booking.event_space.image_url %>
          <% end %>
  <div class="card_booking-infos p-4" >
    <h4><%= @booking.event_space.name.titleize %></h4>
    <p><%= @booking.event_space.city %></p>
    <p>Arrival Date: <%= @booking.start_date %></p>
    <p>Departure Date: <%= @booking.end_date  %></p>
    <p>Total Stay: <%= @booking.qty_hour  %> hours</p>
    <p>Total Cost: <%= @booking.total_cost %> USD</p>
    <%= link_to("Edit your booking", edit_booking_path, class: "btn-success") %>
    <%= link_to("Chat Room", chatroom_path(1), class: "btn-success") %>
    <%= link_to "Cancel your booking", booking_path(@booking), class: "btn-back", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </div>
</div>
</div>
