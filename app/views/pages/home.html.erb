<h1>Event Spaces</h1>


<div class="container">
  <br>
  <h2>Look at our Event Spaces</h2>
  <br>
  <%= form_tag event_spaces_path, method: :get do %>
  <%= text_field_tag :city, params[:city], placeholder: "Look for city" %>
  <%= submit_tag "Search" %>
  <% end %>

  <% @event_spaces.each do |e|%>
    <br>
    <ol>
     <p>Event Space Name: <%= e.name.titleize %></p>
      <p>Address: <%= e.adress.titleize %></p>
      <p>City: <%= e.city.titleize %></p>
      <p>Description: <%= e.description.capitalize %></p>
      <p>Price Per Hour: <%= e.price_per_hour %> USD </p>
      <p>Minimum Rental Hours: <%= e.min_hour %></p>

    </ol>
    <%= link_to "More Details", event_space_path(e), class: "btn btn-primary" %>
    <br>
  <% end %>
</div>
